<%= tag.pc_box id: dom_id(box),
                class: "box pc-box",
                data: { draggable: true,
                        box: box.to_sgid.to_s } do %>


  <%= tag.pc_interface id: "interface_#{dom_id(box)}",
                       data: { controller: "sine" } %>

  <%= tag.button id: dom_class(box, :delete),
                 class: "delete is-small is-danger",
                 data: { reflex: "click->Box#delete",
                         reflex_dataset: "combined" } %>
<% end %>
